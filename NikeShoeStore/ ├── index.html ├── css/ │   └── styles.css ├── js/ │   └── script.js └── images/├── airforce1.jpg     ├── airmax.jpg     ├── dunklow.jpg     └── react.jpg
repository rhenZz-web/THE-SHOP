<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Nike Shoe Store</title>
  <link rel="stylesheet" href="css/styles.css" />
</head>
<body>
  <header>
    <h1>NikeZone</h1>
    <nav>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Products</a></li>
        <li><a href="#">Contact</a></li>
        <li><a href="#">Login</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <div class="product-container" id="product-list"></div>
  </main>

  <footer>
    <p>&copy; 2025 NikeZone. All rights reserved.</p>
  </footer>

  <script src="js/script.js"></script>
</body>
</html>
body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  margin: 0;
  padding: 0;
}

header {
  background-color: #111;
  color: white;
  padding: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

nav ul {
  list-style: none;
  display: flex;
  gap: 20px;
}

nav a {
  color: white;
  text-decoration: none;
}

.product-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding: 20px;
  justify-content: center;
}

.product-card {
  background: white;
  border: 1px solid #ddd;
  border-radius: 10px;
  width: 250px;
  padding: 15px;
  text-align: center;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

.product-card img {
  max-width: 100%;
}

button {
  background-color: black;
  color: white;
  border: none;
  padding: 10px;
  margin-top: 10px;
  cursor: pointer;
}

footer {
  background-color: #111;
  color: white;
  text-align: center;
  padding: 10px;
}
const products = [
  { id: 1, name: "Nike Air Force 1", price: 5999, image: "images/airforce1.jpg" },
  { id: 2, name: "Nike Air Max", price: 6999, image: "images/airmax.jpg" },
  { id: 3, name: "Nike Dunk Low", price: 6499, image: "images/dunklow.jpg" },
  { id: 4, name: "Nike React Infinity", price: 7999, image: "images/react.jpg" },
];

const productList = document.getElementById("product-list");

products.forEach(product => {
  const card = document.createElement("div");
  card.className = "product-card";
  card.innerHTML = `
    <img src="${product.image}" alt="${product.name}">
    <h3>${product.name}</h3>
    <p>â‚±${product.price.toLocaleString()}</p>
    <button onclick="addToCart(${product.id})">Add to Cart</button>
  `;
  productList.appendChild(card);
});

function addToCart(productId) {
  alert("Added product ID " + productId + " to cart!");
}
